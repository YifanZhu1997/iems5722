<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.A4_1155150604">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.CAMERA"/>
    <uses-feature android:name="android.hardware.camera" />
    <uses-feature android:name="android.hardware.camera.autofocus" />
    <application
        android:allowBackup="true"
        android:icon="@drawable/cuhk"
        android:label="@string/app_name"
        android:roundIcon="@drawable/cuhk"
        android:supportsRtl="true"
        android:theme="@style/Theme.ChatApp"
        android:usesCleartextTraffic="true">
        <activity android:name=".CaptureActivity"
            android:screenOrientation="fullSensor"
            android:stateNotNeeded="true"
            android:windowSoftInputMode="stateAlwaysHidden" />
        <activity
            android:name=".LoginActivity"
            android:label="@string/app_name"
            android:launchMode="singleTop"
            android:parentActivityName=".ChatroomActivity"
            android:theme="@style/Theme.ChatApp.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".SignUpActivity"
            android:label="@string/app_name"
            android:launchMode="singleTop"
            android:parentActivityName=".LoginActivity"
            android:theme="@style/Theme.ChatApp.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.A4_1155150604.LoginActivity" />
        </activity>
        <activity
            android:name=".ChatroomActivity"
            android:label="@string/app_name"
            android:launchMode="singleTop"
            android:theme="@style/Theme.ChatApp.NoActionBar" />
        <activity
            android:name=".ChatActivity"
            android:label="@string/app_name"
            android:launchMode="singleTop"
            android:parentActivityName=".ChatroomActivity"
            android:theme="@style/Theme.ChatApp.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.A4_1155150604.ChatroomActivity" />
        </activity>




    </application>
</manifest>